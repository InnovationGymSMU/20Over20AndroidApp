<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Item!"
        android:id="@+id/saveItemButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:onClick="saveNewItem"/>



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemIDSelector"
        android:layout_below="@+id/itemNameEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/registration_text_input_margin"
        android:layout_alignLeft="@id/itemIDSelector"
        android:layout_alignRight="@id/itemIDSelector"
        android:hint="@string/item_name_label"
        android:gravity="center"/>

</RelativeLayout>